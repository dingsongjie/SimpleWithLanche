<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,Chrome=1" />
    <meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes' />
    <title>LancheProject SimpleDemo</title>
    <!-- CSS引用 -->
    <!-- Bootstrap 3.3.2 -->
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- FontAwesome 4.3.0 -->
    <link href="@Url.Content("~/Content/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <!-- Ionicons 2.0.0 -->
    <link href="@Url.Content("~/Content/plugins/ionicons/css/ionicons.min.css")" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="@Url.Content("~/Content/adminlte/css/AdminLTE.min.css")" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
    folder instead of downloading all of them to reduce the load. -->
    <link href="@Url.Content("~/Content/adminlte/css/skins/_all-skins.min.css")" rel="stylesheet" type="text/css" />
    <!-- 自定义样式 -->
    <link href="@Url.Content("~/Content/custom/css/Site.css")" rel="stylesheet" type="text/css" />


    <style type="text/css">
        .content-header {
            color: white;
        }

        .dropdown-menu {
            background-color: rgba(0,0,0,0.8);
            box-shadow: rgba(0,0,0,0.8);
            border-top-width: 0px;
            border-right-width: 0px;
            border-bottom-width: 0px;
            border-left-width: 0px;
        }

            .dropdown-menu > li > a {
                color: white;
            }

                .dropdown-menu > li > a:hover {
                    color: #00ccff;
                }

        .nav > li > a {
            color: white;
        }

        .box {
            background-color: rgba(255,255,255,0.8);
        }

        .modal-content {
            background-color: rgb(255,255,255);
        }

        .nav .open > a:focus {
            color: #00ccff;
        }

        .dow, .switch, .today {
            color: cornflowerblue;
        }


        .day, .month, .year, .minute, .hour {
            color: deepskyblue;
        }

        .glyphicon-arrow-left, .glyphicon-arrow-right {
            color: orange;
        }
    </style>

    @RenderSection("head", required: false)

    <!-- JS引用 -->
    <!-- jQuery 2.1.3 -->
    <script src="@Url.Content("~/Content/plugins/jQuery/jQuery-2.1.3.min.js")" type="text/javascript"></script>
    <!-- jQuery UI 1.11.4 -->
    <!-- Bootstrap 3.3.2 JS -->
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>

</head>
<body class="sidebar-collapse">
    <div>
        <!-- header -->
        <div class="head-module">
        <header class="main-header">
            <!-- Logo -->
                <div class="logo">
                    <a href="#" onclick="GotoIndexUrl()"></a>
                </div>

            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav" id="ulNav"></ul>
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="height:50px;">
                                <img src="@Url.Content("~/Content/adminlte/img/user.jpg")" class="user-image" alt="User Image" />
                                <span id="headLoginUserName" class="hidden-xs">User</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@Url.Content("~/Content/adminlte/img/user.jpg")" class="img-circle" alt="User Image" />
                                    <p id="panelLoginUserName">
                                        User - Web Developer
                                        <small>Member since Nov. 2012</small>
                                    </p>
                                </li>
                             
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        </div>

        <div class="wrapper">
        <!-- Content -->
        @RenderBody()

        <!-- Modals -->
        @RenderSection("modal", required: false)

        <!-- footer -->
            <footer class="main-footer" style="padding-top:5px;padding-bottom:5px;  ">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
                <strong></strong> 
        </footer>
    </div>
    </div>
    <!-- Script -->



    <!-- Slimscroll -->
    <script src="@Url.Content("~/Content/plugins/slimScroll/jquery.slimscroll.min.js")" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="@Url.Content("~/Content/plugins/fastclick/fastclick.js")" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/Content/adminlte/js/app.min.js")" type="text/javascript"></script>
    <!-- Custom Js -->
    <script src="@Url.Content("~/Content/custom/js/yellow.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/custom/js/curdHelper.js")"></script>
    <!--  获取用户名-->
    <script type="text/javascript">     
        function openUrl(openType, url) {
            if (openType == "2") {
                location.href = "http://" + window.location.host + url;
            }
            else {
                window.open(url);
            }
        }

        var indexUrl;
        function GotoIndexUrl() {
            window.open(indexUrl);
            //location.href = indexUrl;
        }
    </script>
    @RenderSection("script", required: false)
</body>
</html>
